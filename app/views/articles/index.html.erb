
<h1>
<select name="articles">
  <%= @articles.each do |article| %>
      <option value="<%= article.id %>"><%= article.name %></option>
  <% end %>
</select>
</h1>

<h1>Articles</h1>
<% @articles.each do |article| %>
    <div>
      <h2><%= article.name %></h2>
      <%= simple_format article.body %>
    </div>
<% end %>

